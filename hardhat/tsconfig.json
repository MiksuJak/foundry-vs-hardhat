{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "esnext",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "build/*": ["build/*"],
      "build": ["build"],
      "contracts/*": ["build/types/*"],
      "contracts": ["build/types", "build/types/factories"],
    }
  },
  "include": [
    "build",
    "contracts",
    "test",
  ]
}
